<!-- Include AlgoliaSearch JS Client and autocomplete.js jQuery plugin after the jQuery dependency -->
<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
<script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.jquery.min.js"></script>
<!-- Initialize autocomplete menu -->
<script>
  var client = algoliasearch('LZEMPFONKV', 'd273e7cc48a855feae0750a9fac8db9a');
  var index = client.initIndex('Profile');
  //initialize autocomplete on search input (ID selector must match)
  $('#aa-search-input').autocomplete(
    {hint: false}, [
    {
      source: $.fn.autocomplete.sources.hits(index, { hitsPerPage: 5 }),
      //value to be displayed in input control after user's suggestion selection
      displayKey: 'username',
      //hash of templates used when rendering dataset
      templates: {
        //'suggestion' templating function used to render a single suggestion
        suggestion: function(suggestion) {
          return "<div class=\"container\">" +
                    "<div class=\"cards\">" +
                      "<div class=\"card col-xs-6 col-md-3\">" +
                        "<div class=\"card-body\">" +
                          "<div class=\"card-picture\" style=\"background-image: url('" + suggestion._highlightResult.img_url.value + "')\">"
                          "<div class=\"card-hover\">" +
                            "<h4>" + suggestion._highlightResult.username.value + "</h4>" +
                            "<h5>" + suggestion._highlightResult.bio.value + "</h5>" +
                          "</div>" +
                        "</div>" +
                      "</div>" +
                    "</div>" +
                  "</div>";
        }
      }
    }
  ]);
</script>
